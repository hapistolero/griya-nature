{
  "env": {
      "es2021": true,
      "node": true
  },      
  "parser": "@babel/eslint-parser",  
  "settings": {
    "react": {
        "version": "detect"
    }
},

    "parserOptions": {        
      "babelOptions": {
        "presets": ["@babel/preset-react"]
     },  
      
      "ecmaVersion": 2020,
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "requireConfigFile": false       
    },
  
  "rules": {
      "no-console": "off",
      "quotes": [2, "double", { "avoidEscape": true }],
      "no-underscore-dangle":"off",
      "linebreak-style": ["error", "windows"],
      "indent": ["error", 4],
      "semi": [2, "never"]     

  }
  
}
